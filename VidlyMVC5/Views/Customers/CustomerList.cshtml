@*@using VidlyMVC5.Models*@
@model IEnumerable<VidlyMVC5.Models.Customer>
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Any() ? "popover.top" : null;
}

<h2 class=@className>Customer List</h2>

@if (!Model.Any())
{
    <text>No any customer !</text>
}
else
{
    <table class ="table-bordered table-striped ">
        <thead>
        <tr>
            <th class="thumbnail">Name</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
        </tr>
        </thead>
        <tr></tr>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "CustomerEdit", "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                </tr>
            }
        </tbody>
    </table>

}
