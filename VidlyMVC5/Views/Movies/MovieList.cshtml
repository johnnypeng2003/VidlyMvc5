@model IEnumerable<VidlyMVC5.Models.Movie>
@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Any() ? "popover.top" : null;
}

<h2 class=@className>Movie List</h2>
<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <text>No any movie !</text>
}
else
{
    <table class="table-bordered table-striped ">
        <thead>
        <tr>
            <th class="thumbnail">Name</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tr></tr>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "MovieEdit", "Movies", new {id = movie.Id}, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
        </tbody>
    </table>
}

