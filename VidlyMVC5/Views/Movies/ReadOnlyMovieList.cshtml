@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>

<table id="movies" class="table-bordered table-striped ">
    <thead>
        <tr>
            <th class="thumbnail">Name</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tr></tr>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}